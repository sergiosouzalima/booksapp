<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @book.published_at %>
</p>

<p>
  <strong>Text:</strong>
  <%= @book.text %>
</p>

<div id="book_<%= @book.id %>_likes">
  <%= render 'likes', book: @book %>
</div>

<h2>Categories</h2>
<ul>
  <% for category in @book.categories %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
