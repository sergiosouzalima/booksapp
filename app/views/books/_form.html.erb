<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :published_at %>
    <%= form.date_select :published_at %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <h2>Categories</h2>
    <ol>
      <%= collection_check_boxes :book, :category_ids, Category.all, :id, :name do |builder| %>
        <li>
          <%= builder.label { builder.check_box + builder.text } %>
        </li>
      <%end%>
    </ul>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
